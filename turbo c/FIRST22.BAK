
#include<stdlib.h>
#include<dos.h>

void main()
{
	int a;
	clrscr();
	randomize();
	random(6)+1;
	while(!kbhit())
	{
		a=random(50)+1;
		printf("%d",a);
		delay(50);
		printf("\b");
	}
	printf("%d",a);
	getch();

}

